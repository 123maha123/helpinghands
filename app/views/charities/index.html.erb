<h1>Listing charities</h1>

<table>
  <thead>
    <tr>
      <th>Charityname</th>
      <th>Ownerfname</th>
      <th>Ownerlname</th>
      <th>Address</th>
      <th>City</th>
      <th>Landmark</th>
      <th>State</th>
      <th>Country</th>
      <th>Phoneno</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charities.each do |charity| %>
      <tr>
        <td><%= charity.charityName %></td>
        <td><%= charity.ownerfname %></td>
        <td><%= charity.ownerlname %></td>
        <td><%= charity.address %></td>
        <td><%= charity.city %></td>
        <td><%= charity.landmark %></td>
        <td><%= charity.state %></td>
        <td><%= charity.country %></td>
        <td><%= charity.phoneNo %></td>
        <td><%= charity.description %></td>
        <td><%= charity.user_id %></td>
        <td><%= link_to 'Show', charity %></td>
        <td><%= link_to 'Edit', edit_charity_path(charity) %></td>
        <td><%= link_to 'Destroy', charity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

