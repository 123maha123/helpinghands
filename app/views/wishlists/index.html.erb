<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <!-- Latest compiled and minified JavaScript -->
        <script src="jquery-1.11.2.min.js"></script>
        <script src="bootstrap.min.js"></script>
        <script src="users.js"></script>
        <script src='//cdn.zarget.com/54561/58108.js'></script>
    </head>
    <body>
      <%=render 'layouts/navigation_bar'%>
      <div class="container-fluid side-borders header-padding page-color full-screen-height">
        <div class="col-sm-12">
        <br>
        <div>
          <ul class="nav nav-tabs nav-pills">
            <li class="active"><a href="/wishlists" class="btn btn-info"><b>My Wishlist</b></a></li>
            <li class=""><a href="/wishlists/new" class="btn btn-info"><b>Create New Wishlists</b></a></li>
          </ul>
        </div>
        <br>
        <br>
        <%if @categories_list.count>0%>
		    <div class="container-fluid col-sm-12">
		            <div class="row">
                        <div class="col-sm-3">
                            <div class="sidebar-nav">
                                <div class="navbar navbar-default" role="navigation">
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                            <span class="sr-only">Toggle navigation</span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                        <span class="visible-xs navbar-brand">Category</span>
                                    </div>
                                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                                        <ul class="nav navbar-nav">
                                            <li class="sidebar-header visible-sm visible-lg visible-md"><a href="#">Categories</a></li>
                                            <% @categories_list.each do |category| %>
                                                <li><a><%=category.category_name%></a></li>
                                            <%end%>
                                        </ul>
                                    </div><!--/.nav-collapse -->
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-9">
                            <%=render "list_Wishlists"%>
                            <br>
                        </div>
                        <br>
                    </div>
                </div>
            </div>
            <%end%>
        <br>
        </div>
      </div>  
      <%=render 'layouts/footer'%>
    </body>
</html>




