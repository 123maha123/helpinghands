<h1>Listing donors</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Username</th>
      <th>Email</th>
      <th>Address</th>
      <th>City</th>
      <th>Landmark</th>
      <th>State</th>
      <th>Country</th>
      <th>Phoneno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donors.each do |donor| %>
      <tr>
        <td><%= donor.fname %></td>
        <td><%= donor.lname %></td>
        <td><%= donor.username %></td>
        <td><%= donor.email %></td>
        <td><%= donor.address %></td>
        <td><%= donor.city %></td>
        <td><%= donor.landmark %></td>
        <td><%= donor.state %></td>
        <td><%= donor.country %></td>
        <td><%= donor.phoneNo %></td>
        <td><%= link_to 'Show', donor %></td>
        <td><%= link_to 'Edit', edit_donor_path(donor) %></td>
        <td><%= link_to 'Destroy', donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

