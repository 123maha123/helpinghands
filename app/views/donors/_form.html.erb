<div class="container">
  <div>
    <ul class="nav nav-tabs nav-pills">
      <li class="" id="userTab"><a href="#" class="btn btn-info" style="cursor:default;"><b>Account Creation</b></a></li>
      <li class="active" id="infoTab"><a href="#" class="btn btn-info" style="cursor:default;"><b>Basic Info</b></a></li>
      <!--<li class="" id="addressTab"><a href="#" class="btn btn-info" style="cursor:default;"><b>Address</b></a></li>-->
    </ul>
  </div>
  <%= form_for ([@user,@donor]) do |f| %>
    <div class="container col-sm-12 form-color form-border" style="padding-bottom:1%">
      <div class="tab-content">
        <div class="tab-pane active" id="info-tab">
          <div class="form-group row header-padding">
            <%= f.label "Name",class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :fname, placeholder: 'First name',class:'form-control'%>
            </div>
            <div class="col-sm-3">
              <%= f.text_field :lname, placeholder: 'Last name',class:'form-control'%>
            </div>
            <div class="col-sm-4">
              <%if @donor.errors[:fname].any? || @donor.errors[:lname].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:fname)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <%for errMsg in @donor.errors.full_messages_for(:lname)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
  
          <div class="form-group row">
            <%= f.label "Phone No",class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :phoneNo,class:'form-control', placeholder: 'Enter your phoneNo'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:phoneNo].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:phoneNo)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
      
          <div class="form-group row">
            <!--<div class="col-sm-4 col-sm-offset-3">
              <a href="#address-tab" data-toggle="tab" class="btn btn-primary" id="nextSignupButton">Next</a>
            </div>
          </div>
        </div>


        <div class="tab-pane" id="address-tab">
          <div class="form-group row header-padding">-->
            <%= f.label :address,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :address,class:'form-control', placeholder: 'Enter your address'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:address].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:address)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
      
          <div class="form-group row">
            <%= f.label :landmark,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :landmark,class:'form-control', placeholder: 'Enter your landmark'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:landmark].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:landmark)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
        
          <div class="form-group row">
            <%= f.label :city,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :city,class:'form-control', placeholder: 'Enter your city'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:city].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:city)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
      
          <div class="form-group row">
            <%= f.label :state,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :state,class:'form-control', placeholder: 'Enter your state'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:state].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:state)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
      
          <div class="form-group row">
            <%= f.label :country,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :country,class:'form-control', placeholder: 'Enter your country'%>
            </div>
            <div class="col-sm-6">
              <%if @donor.errors[:country].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @donor.errors.full_messages_for(:country)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
          
          <div class="form-group row">
              <%= f.hidden_field :donortype,class:'form-control',:value=>"#{params[:donortype]}"%>
          </div>
          
          <div class="form-group row">
              <%= f.hidden_field :user_id,class:'form-control'%>
          </div>
          
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
              <%=f.submit :Register,:class=>"btn btn-primary"%>
            </div>
          </div>
      
          <!--<div class="form-group">
            <div class="col-sm-2 col-sm-offset-1">
              <a href="#info-tab" data-toggle="tab" class="btn btn-primary" id="backSignupButton">Back</a>
            </div>
          </div>-->
        </div>
      </div>
    </div>
  <% end %>
</div>
