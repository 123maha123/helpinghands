  <%= form_for(@user) do |f| %>
    <div class="container col-sm-12 form-color form-border" style="padding-bottom:1%">
      <div class="tab-content">
        <div class="tab-pane active" id="user-tab">
            <div class="form-group row header-padding">
              <%= f.label :username,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :username, placeholder: 'Enter a username',class:'form-control' %>
            </div>
            <div class="col-sm-6">
              <%if @user.errors[:username].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @user.errors.full_messages_for(:username)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :email,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.text_field :email,class:'form-control', placeholder: 'Email address' %>
            </div>
            <div class="col-sm-6">
              <%if @user.errors[:email].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @user.errors.full_messages_for(:email)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :password,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <%= f.password_field :password,class:'form-control', placeholder: 'Password'%>
            </div>
            <div class="col-sm-6">
              <%if @user.errors[:password].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @user.errors.full_messages_for(:password)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
      
          <div class="form-group row">
            <%= f.label "Confirm Password",class:'control-label col-sm-2'%>
              <div class="col-sm-3">
              <%= f.password_field :password_confirmation,class:'form-control', placeholder: 'Confirm password'%>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :usertype,class:'control-label col-sm-2'%>
            <div class="col-sm-3">
              <!--<%= f.text_field :usertype,class:'form-control', placeholder: 'Enter the user type' %>-->
              <%= f.select :usertype, options_for_select([["Helper", "donor"],["Charity", "charity"]], @user.usertype) %>
            </div>
            <div class="col-sm-6">
              <%if @user.errors[:usertype].any? %>
                <ul>
                  <%msg=""%>
                  <%for errMsg in @user.errors.full_messages_for(:usertype)%>
                    <%msg="#{errMsg}. #{msg}"%>
                  <%end%>
                  <li id="errMsgList"><font face="Times New Roman" size="3" color="red"><%=msg%></font></li>
                </ul>
              <%end%>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-1">
              <%=f.submit :Register,:class=>"btn btn-primary"%>
            </div>
          </div>
        </div>
          
      </div>
    </div>
  <% end %>